<odoo>
    <!-- Vista Kanban específica para el Tablero de Alertas -->
    <record id="view_product_template_kanban_alerts" model="ir.ui.view">
        <field name="name">product.template.kanban.alerts</field>
        <field name="model">product.template</field>
        <field name="arch" type="xml">
            <kanban create="0" sample="1">
                <field name="id"/>
                <field name="name"/>
                <field name="qty_available"/>
                <field name="minimal_stock"/>
                <field name="categ_id"/>
                <field name="image_128"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click oe_kanban_card d-flex flex-row">
                            <div class="o_kanban_image me-2">
                                <img t-att-src="kanban_image('product.template', 'image_128', record.id.raw_value)" alt="Product" class="o_image_64_contain"/>
                            </div>
                            <div class="oe_kanban_details flex-grow-1">
                                <strong class="o_kanban_record_title"><field name="name"/></strong>
                                <div class="mt-1">
                                    <span class="badge text-bg-danger">Stock: <field name="qty_available"/></span>
                                    <span class="ms-1 text-muted">Min: <field name="minimal_stock"/></span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Acción de Ventana para el Tablero -->
    <record id="action_inventory_alerts_dashboard" model="ir.actions.act_window">
        <field name="name">Tablero de Alertas</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="view_id" ref="view_product_template_kanban_alerts"/>
        <field name="domain">[('is_low_stock', '=', True)]</field>
        <field name="context">{'group_by': 'categ_id', 'create': False}</field>
    </record>

    <!-- Menú bajo Inventario -->
    <menuitem id="menu_inventory_alerts_dashboard"
              name="Stock Critico"
              parent="stock.menu_stock_root"
              action="action_inventory_alerts_dashboard"
              sequence="100"/>
</odoo>
